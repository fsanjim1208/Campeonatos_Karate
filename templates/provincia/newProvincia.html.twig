{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
    <div class="c-contentForm">
        <h2 class="text-primary text-uppercase mt-5">Registrate</h2>
        {{ form_start(provincia,{'attr' : {'class': 'centraFormulario'}}) }}
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        {{ form_row(provincia.Nombre,{'attr' : {'class': 'form-control', 'placeholder':'Nombre'},label:'Nombre'}) }}
                    </div>
                   
                    <button class="btn btn-primary w-100 py-3" type="submit">Registrarse</button>
                </div>
            </div>
        {{ form_end(provincia) }} 
    </div>
{% endblock %}
