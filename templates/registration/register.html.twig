{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}
{% block javascripts %}
    <script src="{{ asset('JS/registro/registro.js') }}" type="text/javascript"></script>
{% endblock %}
{% block body %}
    <div class="c-contentForm">
        <h2 class="text-primary text-uppercase mt-1">Registrate</h2>
        {{ form_start(registrationForm,{'attr' : {'class': 'centraFormulario'}}) }}
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        {{ form_row(registrationForm.nombre,{'attr' : {'class': 'form-control', 'placeholder':'Nombre'},label:'Nombre'}) }}
                    </div>
                    <br>
                    <div class="row">
                        <div class="form-floating col">
                            {{ form_row(registrationForm.apellido1,{'attr' : {'class': 'form-control','placeholder':'Apellido 1'},label:"Apellido 1"}) }}
                        </div>

                        <div class="form-floating col">
                            {{ form_row(registrationForm.apellido2,{'attr' : {'class': 'form-control','placeholder':'Apellido 2'},label:'Apellido 2'}) }}
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col">
                            <label for="peso">Peso</label>
                            <input type="number" class="form-control" id="peso" name="peso" placeholder="Peso en Kg">
                        </div>

                        <div class="col">
                            <label for="fecha_nacimiento">Fecha de Nacimiento</label>
                            <input type="date" class="form-control" id="fecha_nacimiento" name="fecha_nacimiento" placeholder="dd/mm/aaaa">
                        </div>
                    </div>
                    <br>
                    <label>Sexo</label>
                    <div class="form-floating">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="sexo" id="masculino" value="Masculino">
                            <label class="form-check-label" for="masculino">Masculino</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="sexo" id="femenino" value="Femenino">
                            <label class="form-check-label" for="femenino">Femenino</label>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col">
                            <label for="comunidad">Comunidad Autonoma</label>
                            <select class="form-select form-select-m" id="comunidad" name="comunidad">
                                {% for c in comunidad %}
                                    <option value={{c.id}}>{{ c }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class=" col">
                            <label for="provincia">Provincia</label>
                            <br>
                            <select class="form-select form-select-m" id="provincia" name="provincia"></select>
                        </div>
                    </div>
                    <br>
                    <div class="form-floating">
                        {{ form_row(registrationForm.email,{'attr' : {'class': 'form-control','placeholder':'Email'},label:'Email'}) }}
                    </div>
                    <br>

                    {# {% if error %}
                        <label class="text-danger">{{error}}</label>
                    {% endif %}
                     #}
                    <div class="form-floating">
                        {{ form_row(registrationForm.plainPassword,{'attr' : {'class': 'form-control','placeholder':'Contrase単a'},label:'Contrase単a'}) }}
                    </div>
                    <br>
                    <div>
                        <label for="password">Repita la contrase単a</label>
                        <input type="password" class="form-control" id="password" name="_password" placeholder="Contrase単a">
                    </div>
                    <br>

                    <button class="btn btn-primary w-100 py-3" type="submit">Registrarse</button>
                </div>
            </div>
        {{ form_end(registrationForm) }}
    </div>
    {{ dump() }}
{% endblock %}
