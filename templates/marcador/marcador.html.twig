{% extends 'base.html.twig' %}
{% block javascripts %}
    <script src="{{ asset('JS/marcador/marcador.js') }}" type="text/javascript"></script>
{% endblock %}
{% block body %}
    <p id="tiempo" class="fs-1 text-center">Tiempo restante: {{ tiempo }}</p>
    
    <div class="puntos d-flex justify-content-center align-items-center" >
        <div class="penalizaciones-rojo me-3">
            <div class="row">

                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesRojo">C1</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesRojo[]" id="c1R">   
                </div>
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesRojo">C2</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesRojo[]" id="c2R">   
                </div>
            </div>
            
            <div class="row">
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesRojo">C3</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesRojo[]" id="c3R">   
                </div>
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesRojo">C4</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesRojo[]" id="c4R">   
                </div>
            </div>     

            <div class="row">
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesRojo">C5</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesRojo[]" id="c5R">   
                </div>
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesRojo">C6</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesRojo[]" id="c6R">   
                </div>
            </div>        

            <div class="row">
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesRojo">C7</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesRojo[]" id="c7R">   
                </div>
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesRojo">C8</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesRojo[]" id="c8R">   
                </div>
            </div>
        </div>
        <div class="botonos-rojo">
            <button id="1Rojo" class="btn-marcador">+ 1</button>
            <button id="1MenosRojo" class="btn-marcador ms-2">- 1</button><br>
            <button id="2Rojo" class="btn-marcador mt-1">+ 2</button>
            <button id="2MenosRojo" class="btn-marcador ms-2">- 2</button><br>
            <button id="3Rojo" class="btn-marcador mt-1">+ 3</button>
            <button id="3MenosRojo" class="btn-marcador ms-2">- 3</button>
        </div>
        <div class="rojo d-flex flex-column bg-danger justify-content-center align-items-center">
            <div>
                <p class="text-white">Competidor Rojo</p>    
            </div>
            <div>
                <p class="text-white" id="puntosRojo">{{ puntos }}</p>
            </div>
        </div>
        <div class="azul d-flex flex-column justify-content-center align-items-center">
            <div>
                <p class="text-white">Competidor Rojo</p>    
            </div>
            <div>
                <p class="text-white" id="puntosAzul">{{ puntos }}</p>
            </div>
        </div>
        <div class="botonos-azul">
            <button id="1Azul" class="btn-marcador">+ 1</button>
            <button id="1MenosAzul" class="btn-marcador ms-2">- 1</button><br>
            <button id="2Azul" class="btn-marcador mt-1">+ 2</button>
            <button id="2MenosAzul" class="btn-marcador ms-2">- 2</button><br>
            <button id="3Azul" class="btn-marcador mt-1">+ 3</button>
            <button id="3MenosAzul" class="btn-marcador ms-2">- 3</button>
        </div>
        <div class="penalizaciones-azul ms-4">
            <div class="row">

                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesAzul">C1</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesAzul[]" id="c1A">   
                </div>
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesAzul">C2</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesAzul[]" id="c2A">   
                </div>
            </div>
            
            <div class="row">
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesAzul">C3</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesAzul[]" id="c3A">   
                </div>
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesAzul">C4</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesAzul[]" id="c4A">   
                </div>
            </div>     

            <div class="row">
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesAzul">C5</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesAzul[]" id="c5A">   
                </div>
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesAzul">C6</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesAzul[]" id="c6A">   
                </div>
            </div>        

            <div class="row">
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesAzul">C7</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesAzul[]" id="c7A">   
                </div>
                <div class="form-check col">
                    <label class="form-check-label" for="penalizacionesAzul">C8</label>
                    <input class="form-check-input" type="checkbox" name="penalizacionesAzul[]" id="c8A">   
                </div>
            </div>
        </div>
    </div>
    <div class="text-center tiempo mt-4">
        
        <button id="iniciar" class="btn-marcador">Iniciar</button>
        <button id="parar" class="btn-marcador">Parar</button><br>
        <button id="restar" class="btn">-5s</button>
        <button id="sumar" class="btn">+5s</button><br>
        <button id="reiniciar" class="btn">Reiniciar</button>
    </div>
{% endblock %}
